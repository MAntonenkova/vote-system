<?xml version="1.0" encoding="UTF-8"?>
<b:beans xmlns:b="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://www.springframework.org/schema/security"
         xsi:schemaLocation="
        http://www.springframework.org/schema/security
        http://www.springframework.org/schema/security/spring-security.xsd
        http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <http auto-config="true">
        <intercept-url pattern="/votesystem/users" access="hasRole('ROLE_ADMIN')"/>
        <intercept-url pattern="/votesystem/votes" access="hasRole('ROLE_ADMIN')"/>
        <intercept-url pattern="/votesystem/restaurants" access="hasRole('ROLE_USER')"/>
        <intercept-url pattern="/votesystem/vote" access="hasRole('ROLE_USER')"/>
    </http>
    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="Viktor" password="{noop}admin" authorities="ROLE_ADMIN"/>
                <user name="Igor" password="{noop}admin" authorities="ROLE_ADMIN"/>
                <user name="Vasya" password="{noop}password" authorities="ROLE_USER"/>
            </user-service>
        </authentication-provider>
    </authentication-manager>
</b:beans>